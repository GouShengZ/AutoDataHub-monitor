# AutoDataHub-monitor 环境变量配置文件
# 复制此文件为 .env 并根据实际环境修改配置

# MySQL 配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_ROOT_PASSWORD=autodatahub123
MYSQL_DATABASE=autodatahub
MYSQL_USER=autodatahub
MYSQL_PASSWORD=autodatahub123

# Redis 配置
REDIS_ADDR=redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json

# 服务器配置
SERVER_PORT=8080
HEALTH_CHECK_PORT=8081

# 监控配置
MONITOR_INTERVAL=30s
ALERT_THRESHOLD=1000

# API 配置
API_BASE_URL=http://localhost:8080
FEISHU_WEBHOOK_URL=https://open.feishu.cn/open-apis/bot/v2/hook/YOUR_WEBHOOK_URL

# 测试环境配置（用于集成测试）
